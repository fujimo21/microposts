<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <p>Followed Users</p>
    <% if @user.follower_users.any? %>
      <h3><%= @user.follower_users.count %> followers</h3>
      <% @follower_users.each do |follower_user| %>
      <div id="following-follower">
        <ul>
          <%= link_to gravatar_for(follower_user, size: 50), follower_user %>
          <li><%= link_to follower_user.name, follower_user %></li>
          <li>"改修予定"</li>
          <li>"改修予定"</li>
        </ul>
      </div>
      <% end %>
      </ol>
    <% end %>
  </div>
</div>