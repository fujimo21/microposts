<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <p>Follower Users</p>
    <% if @user.follower_users.any? %>
      <h3><%= @user.follower_users.count %> followers</h3>
      <% @follower_users.each do |follower_user| %>
      <div class="following-follower">
        <ul>
          <% if follower_user.image.present? %>
            <%= link_to follower_user.image, follower_user %>
          <% else %>
            <%= link_to gravatar_for(follower_user, size: 50), follower_user %>
          <% end %>
          <%= link_to follower_user.name, follower_user %>
        </ul>
      </div>
      <% end %>
    <% end %>
  </div>
</div>