<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <p>Following Users</p>
    <% if @user.following_users.any? %>
      <h3><%= @user.following_users.count %> followings</h3>
      <% @following_users.each do |following_user| %>
      <div class="following-follower">
        <ul>
          <% if following_user.image.present? %>
            <%= link_to following_user.image, following_user %>
          <% else %>
            <%= link_to gravatar_for(following_user, size: 50), following_user %>
          <% end %>
          <%= link_to following_user.name, following_user %>
        </ul>
      </div>
      <% end %>
    <% end %>
  </div>
</div>