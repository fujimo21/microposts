<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
				<% if @user.comment.present? %>
  			<%= @user.comment %>
  			<% end %>
			</p>

			<p>
				<%= link_to "Edit", edit_user_path, class: "btn btn-large btn-primary" %>
			</p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3><%= @user.following_users.count %> followings</h3>
      <ol class="followings">
        <%= @user.following_users.name %>
      </ol>
    <% end %>
  </div>
</div>