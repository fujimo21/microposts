<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
  
</h1>

<div class="col-md-6 col-md-offset-3">
	<h3>
  	<%= @user.email %>
	</h3>
	
	<p>
		<% if @user.comment.present? %>
  		<%= @user.comment %>
  	<% end %>
	</p>

	<p>
		<%= link_to "Edit", edit_user_path, class: "btn btn-large btn-primary" %>
	</p>
</div>